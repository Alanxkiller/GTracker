<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".NewNoteActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="Nombre/direccion"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <EditText
        android:id="@+id/edit_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:inputType="text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:text="Precio por litro"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <EditText
        android:id="@+id/edit_text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Precio - MAGNA"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/edit_text_description2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Precio - PREMIUM"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/edit_text_description3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Precio - DIESEL"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/edit_text_comentario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="Deja tu comentario"
        android:inputType="text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:text="Prioridad"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <NumberPicker
        android:id="@+id/number_picker_priority"
        android:layout_width="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />

</LinearLayout>